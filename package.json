{
  "name": "ting-reader-client",
  "version": "1.0.0",
  "description": "Desktop client for TingReader",
  "main": "electron/main.js",
  "scripts": {
    "prebuild": "node scripts/prepare-build.js",
    "electron:dev": "concurrently \"npm run dev:frontend\" \"wait-on tcp:5173 && cross-env NODE_ENV=development electron .\"",
    "electron:build": "npm run prebuild && electron-builder",
    "dev:frontend": "cd frontend && npm run dev"
  },
  "build": {
    "appId": "com.tingreader.app",
    "productName": "TingReader",
    "directories": {
      "output": "dist_electron"
    },
    "files": [
      "electron/**/*",
      "resources/frontend/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "icon": "build/icon.png",
      "category": "Audio"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^40.1.0",
    "electron-builder": "^26.7.0",
    "wait-on": "^9.0.3"
  },
  "dependencies": {
    "axios": "^1.13.4",
    "fs-extra": "^11.3.3"
  }
}
